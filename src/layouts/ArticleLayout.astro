---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseLayout from './BaseLayout.astro';

type Props = CollectionEntry<'articles'>['data'];

const { title, description, date, author, heroImage } = Astro.props;

function formatDate(date: Date) {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}
---

<BaseLayout title={title} description={description}>
  <article class="max-w-4xl mx-auto px-4 py-8">
    <!-- Hero Image -->
    {heroImage && (
      <div class="mb-8">
        <Image 
          src={heroImage} 
          alt="" 
          width={1020}
          height={510}
          class="w-full rounded-lg border border-zinc-200 dark:border-zinc-800"
        />
      </div>
    )}

    <!-- Article Header -->
    <header class="text-center mb-12 pb-8 border-b border-zinc-200 dark:border-zinc-800">
      <div class="mb-4">
        <time class="text-zinc-500 dark:text-zinc-400 text-sm font-mono">
          {formatDate(date)}
        </time>
        <div class="text-zinc-500 dark:text-zinc-400 text-sm font-mono mt-2">
          By {author}
        </div>
      </div>
      <h1 class="text-zinc-800 dark:text-zinc-100 text-4xl md:text-5xl font-bold leading-tight">
        {title}
      </h1>
    </header>

    <!-- Article Content -->
    <div class="prose prose-zinc dark:prose-invert max-w-none">
      <div class="text-zinc-800 dark:text-zinc-200 leading-relaxed">
        <slot />
      </div>
    </div>
  </article>
</BaseLayout>