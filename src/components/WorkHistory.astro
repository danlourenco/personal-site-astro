---
import { Image } from 'astro:assets';

// Company logos
import slaromBuildLogo from '../images/logos/slalom_build_logo.jpeg';
import slaromConsultingLogo from '../images/logos/slalom_consulting_logo.jpeg';
import mcgrawHillLogo from '../images/logos/mcgraw_hill_education_logo.jpeg';
import sapientLogo from '../images/logos/sapient_global_markets_logo.jpeg';
---

<div class="rounded-2xl border border-zinc-100 p-6 dark:border-zinc-700/40">
  <h2 class="flex text-sm font-semibold text-zinc-900 dark:text-zinc-100">
    <svg viewBox="0 0 24 24" fill="none" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true" class="h-6 w-6 flex-none">
      <path d="M20.25 14.15v4.25c0 1.094-.787 2.036-1.872 2.18-2.087.277-4.216.42-6.378.42s-4.291-.143-6.378-.42c-1.085-.144-1.872-1.086-1.872-2.18v-4.25m16.5 0a2.18 2.18 0 00.75-1.661V8.706c0-1.081-.768-2.015-1.837-2.175a48.114 48.114 0 00-3.413-.387m4.5 8.006c-.194.165-.42.295-.673.38A23.978 23.978 0 0112 15.75c-2.648 0-5.195-.429-7.577-1.22a2.016 2.016 0 01-.673-.38m0 0A2.18 2.18 0 013 12.489V8.706c0-1.081.768-2.015 1.837-2.175a48.111 48.111 0 013.413-.387m7.5 0V5.25A2.25 2.25 0 0013.5 3h-3a2.25 2.25 0 00-2.25 2.25v.894m7.5 0a48.667 48.667 0 00-7.5 0M12 12.75h.008v.008H12v-.008z" class="fill-zinc-100 stroke-zinc-400 dark:fill-zinc-100/10 dark:stroke-zinc-500" />
    </svg>
    <span class="ml-3">Work</span>
  </h2>
  <ol class="mt-6 space-y-4">
    <li class="flex gap-4">
      <div class="relative mt-1 flex h-10 w-10 flex-none items-center justify-center rounded-full shadow-md shadow-zinc-800/5 ring-1 ring-zinc-900/5 dark:border dark:border-zinc-700/50 dark:bg-slate-700 dark:ring-0">
        <Image
          src={slaromBuildLogo}
          alt="Slalom Build logo"
          width={80}
          height={80}
          class="h-full w-full object-cover rounded-full"
        />
      </div>
      <dl class="flex flex-auto flex-wrap gap-x-2">
        <dt class="sr-only">Company</dt>
        <dd class="w-full flex-none text-sm font-medium text-zinc-900 dark:text-zinc-100">
          Slalom Build
        </dd>
        <dt class="sr-only">Role</dt>
        <dd class="text-xs text-zinc-500 dark:text-zinc-400">
          Solution Architect
        </dd>
        <dt class="sr-only">Date</dt>
        <dd class="ml-auto text-xs text-zinc-400 dark:text-zinc-500" aria-label="2022 until Present">
          <time datetime="2022">2022</time> <span aria-hidden="true">—</span> <time datetime="2024">Present</time>
        </dd>
      </dl>
    </li>
    <li class="flex gap-4">
      <div class="relative mt-1 flex h-10 w-10 flex-none items-center justify-center rounded-full shadow-md shadow-zinc-800/5 ring-1 ring-zinc-900/5 dark:border dark:border-zinc-700/50 dark:bg-slate-700 dark:ring-0">
        <Image
          src={slaromBuildLogo}
          alt="Slalom Build logo"
          width={80}
          height={80}
          class="h-full w-full object-cover rounded-full"
        />
      </div>
      <dl class="flex flex-auto flex-wrap gap-x-2">
        <dt class="sr-only">Company</dt>
        <dd class="w-full flex-none text-sm font-medium text-zinc-900 dark:text-zinc-100">
          Slalom Build
        </dd>
        <dt class="sr-only">Role</dt>
        <dd class="text-xs text-zinc-500 dark:text-zinc-400">
          Senior Software Engineer
        </dd>
        <dt class="sr-only">Date</dt>
        <dd class="ml-auto text-xs text-zinc-400 dark:text-zinc-500" aria-label="2019 until 2022">
          <time datetime="2019">2019</time> <span aria-hidden="true">—</span> <time datetime="2022">2022</time>
        </dd>
      </dl>
    </li>
    <li class="flex gap-4">
      <div class="relative mt-1 flex h-10 w-10 flex-none items-center justify-center rounded-full shadow-md shadow-zinc-800/5 ring-1 ring-zinc-900/5 dark:border dark:border-zinc-700/50 dark:bg-slate-700 dark:ring-0">
        <Image
          src={slaromConsultingLogo}
          alt="Slalom logo"
          width={80}
          height={80}
          class="h-full w-full object-cover rounded-full"
        />
      </div>
      <dl class="flex flex-auto flex-wrap gap-x-2">
        <dt class="sr-only">Company</dt>
        <dd class="w-full flex-none text-sm font-medium text-zinc-900 dark:text-zinc-100">
          Slalom
        </dd>
        <dt class="sr-only">Role</dt>
        <dd class="text-xs text-zinc-500 dark:text-zinc-400">
          Consultant
        </dd>
        <dt class="sr-only">Date</dt>
        <dd class="ml-auto text-xs text-zinc-400 dark:text-zinc-500" aria-label="2016 until 2019">
          <time datetime="2016">2016</time> <span aria-hidden="true">—</span> <time datetime="2019">2019</time>
        </dd>
      </dl>
    </li>
    <li class="flex gap-4">
      <div class="relative mt-1 flex h-10 w-10 flex-none items-center justify-center rounded-full shadow-md shadow-zinc-800/5 ring-1 ring-zinc-900/5 dark:border dark:border-zinc-700/50 dark:bg-slate-700 dark:ring-0">
        <Image
          src={mcgrawHillLogo}
          alt="McGraw-Hill Education logo"
          width={80}
          height={80}
          class="h-full w-full object-cover rounded-full"
        />
      </div>
      <dl class="flex flex-auto flex-wrap gap-x-2">
        <dt class="sr-only">Company</dt>
        <dd class="w-full flex-none text-sm font-medium text-zinc-900 dark:text-zinc-100">
          McGraw-Hill Education
        </dd>
        <dt class="sr-only">Role</dt>
        <dd class="text-xs text-zinc-500 dark:text-zinc-400">
          Senior UI Engineer
        </dd>
        <dt class="sr-only">Date</dt>
        <dd class="ml-auto text-xs text-zinc-400 dark:text-zinc-500" aria-label="2015 until 2016">
          <time datetime="2015">2015</time> <span aria-hidden="true">—</span> <time datetime="2016">2016</time>
        </dd>
      </dl>
    </li>
    <li class="flex gap-4">
      <div class="relative mt-1 flex h-10 w-10 flex-none items-center justify-center rounded-full shadow-md shadow-zinc-800/5 ring-1 ring-zinc-900/5 dark:border dark:border-zinc-700/50 dark:bg-slate-700 dark:ring-0">
        <Image
          src={sapientLogo}
          alt="Sapient Global Markets logo"
          width={80}
          height={80}
          class="h-full w-full object-cover rounded-full"
        />
      </div>
      <dl class="flex flex-auto flex-wrap gap-x-2">
        <dt class="sr-only">Company</dt>
        <dd class="w-full flex-none text-sm font-medium text-zinc-900 dark:text-zinc-100">
          Sapient Global Markets
        </dd>
        <dt class="sr-only">Role</dt>
        <dd class="text-xs text-zinc-500 dark:text-zinc-400">
          Senior Interactive Developer
        </dd>
        <dt class="sr-only">Date</dt>
        <dd class="ml-auto text-xs text-zinc-400 dark:text-zinc-500" aria-label="2013 until 2015">
          <time datetime="2013">2013</time> <span aria-hidden="true">—</span> <time datetime="2015">2015</time>
        </dd>
      </dl>
    </li>
  </ol>
