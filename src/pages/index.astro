                <dt class="sr-only">Date</dt>
                <dd class="ml-auto text-xs text-zinc-400 dark:text-zinc-500" aria-label="2016 until Present">
                  <time datetime="2016">2016</time> <span aria-hidden="true">‚Äî</span> <time datetime="2024">Present</time>
                </dd>
              </dl>
            </li>
          </ol>
          
          <!-- Client Engagements -->
          <div class="mt-8">
            <h3 class="text-sm font-semibold text-zinc-900 dark:text-zinc-100 mb-4">Recent Client Engagements</h3>
            <ul class="space-y-3">
              <li class="flex items-center gap-3 text-sm">
                <Image
                  src={import('../images/logos/starbucks.svg')}
                  alt=""
                  width={28}
                  height={28}
                  class="h-7 w-7 flex-none"
                />
                <span class="text-zinc-600 dark:text-zinc-400">Major American Bank: Frontend architecture & tech leadership</span>
              </li>
              <li class="flex items-center gap-3 text-sm">
                <Image
                  src={import('../images/logos/facebook.svg')}
                  alt=""
                  width={28}
                  height={28}
                  class="h-7 w-7 flex-none"
                />
                <span class="text-zinc-600 dark:text-zinc-400">Global Athletic Apparel Company: Founding frontend engineer</span>
              </li>
              <li class="flex items-center gap-3 text-sm">
                <Image
                  src={import('../images/logos/airbnb.svg')}
                  alt=""
                  width={28}
                  height={28}
