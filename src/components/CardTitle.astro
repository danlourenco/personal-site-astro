---
import CardLink from './CardLink.astro';

export interface Props {
  as?: keyof HTMLElementTagNameMap;
  href?: string;
}

const { as: Component = 'h2', href, ...props } = Astro.props;
---

<Component class="text-base font-semibold tracking-tight text-zinc-800 dark:text-zinc-100" {...props}>
  {href ? (
    <CardLink href={href}>
      <slot />
    </CardLink>
  ) : (
    <slot />
  )}
</Component>